@model Book

<div class="card card-outline-primary m-1 p-1">

    <h3>
        @Model.Title
        <span class="badge badge-pill badge-primary" style="float:right">
            $@Model.Price
        </span>
    </h3>
    <h5>By @Model.Author</h5>
    <p>Published by @Model.Publisher; ISBN: 978-@Model.ISBN</p>
    <p>Classification: @Model.Class</p>
    <p>Category: @Model.Type</p>


</div>